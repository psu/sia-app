<!DOCTYPE html>
<html>
  <head>
    <title><%= writer.name %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  
    <h1><%= writer.name %></h1>
    <div class="writer-info">
      <p>
      
        <% if (writer.aka) { %>
          <span class="person-aka">aka. <a href="/writer/<%= writer.aka.id %>"><%= writer.aka.name %></a></span>
        <% } %>
        <% if (writer.country) { %>From <%= writer.country %>.<% } %>
  
        <% if (writer.birth) { %>
          <% if (writer.type == 'person') { %>
            Born in 
          <% } else if (writer.type == 'group') { %>
            Started in
          <% } %>
          <%= writer.birth %>.
        <% } %>
      </p>      
      <% if (writer.disambiguation) { %><p><em><%= writer.disambiguation %></em></p><% } %>
    </div>

    <h2>Collaborations</h2>
    <ul>
      <li><div class="collaboration"><h3>Songwriter x</h3></div></li>
      <li><div class="collaboration"><h3>Artist x</h3></div></li>
      <li><div class="collaboration"><h3>Band?</h3></div></li>
      <li><div class="collaboration"><h3>Another one</h3></div></li>
    </ul>
    
    <% if (writer.songs) { %>
      <h2>Songs</h2>
      <ul>
        <% writer.songs.forEach(function(s){ %>
          <li><h3>
            <a href="/song/<%= s.id %>"><%= s.title %></a>
             <% if (s.type) { %>
               (<%= s.type %>)
             <% } %>
           </h3></li>
        <% }) %>
      </ul>
    <% } %>

